library(devtools)
library(terra)
library(imageRy)
library(ggplot2)
library(viridis) # in order to plot images with different viridis color ramp palettes

setwd("C:/Users/Utente/Desktop/foto_esame_r") # for Windows
mad23 = rast("mad23.jpg")
mad24 = rast("mad24.jpg")
mad25 = rast("mad25.jpg")
par(mfrow=c(3,1)) # the first number is for the column and the second for the row
plot(mad23)
plot(mad24)
plot(mad25)

# l'immagine che comparir√† rappresenta l'isola prima dell'incendio, circa 2 mesi dopo e un anno dopo l'incendio

dev.off()

# calcoliamo il dvi per le tre immagini
dvi23 = mad23[[1]] - mad23[[2]]
dvi24 = mad24[[1]] - mad24[[2]]
dvi25 = mad25[[1]] - mad25[[2]]

par(mfrow=c(3,2)) # 3 righe e due colonne, sulla sinistra l'immagine normale e sulla destra il dvi
plot(mad23)
plot(ndvi23)
plot(mad24)
plot(dvi24)
plot(mad25)
plot(dvi25)







